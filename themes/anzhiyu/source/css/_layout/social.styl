.card-sociali
  display: flex
  flex-wrap: wrap
  gap: 10px

  .social-item
    display: flex
    flex-direction: column
    align-items: center
    text-align: center
    padding: 10px
    border: 1px solid var(--border-color)
    border-radius: 8px
    transition: transform 0.3s ease

    &:hover
      transform: scale(1.05)

    img.icon
      width: 40px
      height: 40px
      margin-bottom: 8px

    .qr-code
      display: none
      width: 80px
      height: 80px
      margin-top: 10px

    &:hover .qr-code
      display: block
