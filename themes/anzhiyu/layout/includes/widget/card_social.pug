if theme.aside.card_social.enable
  .card-widget.card-social(style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 16px;")
    each social in theme.aside.card_social.items
      .social-item(style="position: relative; width: 100px; height: 100px; perspective: 1000px;")
        .social-inner(style="position: absolute; width: 100%; height: 100%; transform-style: preserve-3d; transition: transform 0.6s;")
          .social-front(style=`position: absolute; width: 100%; height: 100%; backface-visibility: hidden; display: flex; flex-direction: column; align-items: center; justify-content: center; background: var(--card-bg); border-radius: 8px;`)
            img.icon(src=social.icon, alt=social.name, style="width: 40px; height: 40px; margin-bottom: 8px;")
            .social-text(style="font-size: 14px; color: var(--text-color);")= social.name
          .social-back(style=`position: absolute; width: 100%; height: 100%; backface-visibility: hidden; transform: rotateY(180deg); display: flex; align-items: center; justify-content: center; background: #fff; border: 1px solid #ccc; border-radius: 8px;`)
            img.qr-code(src=social.qr, alt=social.name, style="width: 80px; height: 80px;")
