if theme.aside.card_social.enable
  .card-widget.card-social(style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 16px;")
    each social in theme.aside.card_social.items
      .social-item(style="display: flex; flex-direction: column; align-items: center; text-align: center; padding: 10px; background: var(--card-bg); border-radius: 8px; transition: transform 0.3s; position: relative;")
        a(href=social.link, title=social.name, target="_blank")
          img.icon(src=social.icon, alt=social.name, style="width: 40px; height: 40px; margin-bottom: 8px;")
          .social-text(style="font-size: 14px; color: var(--text-color);")= social.name
        if social.qr
          .qr-code(style="display: none; position: absolute; top: 100%; left: 50%; transform: translateX(-50%); width: 120px; height: 120px; background-color: #fff; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);")
      script.
        document.querySelectorAll('.social-item').forEach(item => {
          item.addEventListener('mouseover', () => {
            const qr = item.querySelector('.qr-code');
            if (qr) qr.style.display = 'block';
          });
          item.addEventListener('mouseout', () => {
            const qr = item.querySelector('.qr-code');
            if (qr) qr.style.display = 'none';
          });
        });
